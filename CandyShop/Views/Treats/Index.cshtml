@{
  Layout = "_Layout";
}

@using CandyShop.Models;

<h1>Our Treats</h1>

@if(@Model.Count == 0)
{
  <h2>There are no treats yet!</h2>
}
else
{
  <ul>
    @foreach(Treat treat in Model)
    {
      <li>
        @Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId})
        @if(User.Identity.IsAuthenticated)
        {
          @Html.ActionLink("Delete", "Delete", "Treats", new { id = treat.TreatId }, new { @class="btn btn-primary"})
        }
      </li>
    }
  </ul>
}
@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("New Treat", "Create", "Treats", null, new{ @class="btn btn-primary"})
}
