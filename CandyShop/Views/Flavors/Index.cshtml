@{
  Layout = "_Layout";
}

@using CandyShop.Models;

<h1>Our Flavors</h1>

@if(@Model.Count == 0)
{
  <h2>There are no flavors yet!</h2>
}
else
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>
        @Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId})
        @if(User.Identity.IsAuthenticated)
        {
          @Html.ActionLink("Delete", "Delete", "Flavors", new { id = flavor.FlavorId }, new { @class="btn btn-primary"})
        }
      </li>
    }
  </ul>
}
@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("New Flavor", "Create", "Flavors", null, new{ @class="btn btn-primary"})
}